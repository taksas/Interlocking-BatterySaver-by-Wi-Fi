<Window
    x:Class="Minimal_BatterySaver_Enabler__with_Wi_Fi_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minimal_BatterySaver_Enabler__with_Wi_Fi_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="300"
    Height="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <Grid >
            <ui:SimpleStackPanel Margin="12" Spacing="24">
                <TextBlock x:Name="Title" Style="{StaticResource HeaderTextBlockStyle}" Text="My first ModernWPF app" />
                <Button Content="I am a button" Click="Button_Click" />
                <Button Content="I am an accent button" Click="Button_Click_1" Style="{StaticResource AccentButtonStyle}" />
            </ui:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>