<Window
    x:Class="Interlocking_BatterySaver_by_Wi_Fi_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Interlocking_BatterySaver_by_Wi_Fi_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Interlocking BatterySaver by Wi-Fi"
    Width="350"
    Height="400"
    ui:WindowHelper.UseModernWindowStyle="True" 
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStyle="ToolWindow"
    
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">




    <Grid Margin="12,12,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" >
            <ListView Name="APList" SelectionMode="Single" VerticalAlignment="Top" SelectionChanged="APList_SelectionChanged"  >
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        Width="200"
                        DisplayMemberBinding="{Binding AP_Name}"
                        Header="AP Name" />
                        <GridViewColumn
                        Width="100"
                        Header="Battery (%)" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="wpf:Entry">
                                    <ComboBox Name="comboBox" Width="80" ItemsSource="{Binding Battery}" SelectedIndex="{Binding SelectedIndex}"  SelectionChanged="comboBox_SelectionChanged">
                                    </ComboBox>
                                </DataTemplate>
                                
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Name="DeleteB" Content="Delete" Click="Delete_Button_Click"  Background ="Red" VerticalAlignment="Stretch" IsEnabled="False" />
            <Button Grid.Column="0" Name="UpdateB" Content="Update" Click="Delete_Button_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Stretch" IsEnabled="False"  />
            <Button Grid.Column="1" Content="Help" Click="Help_Button_Click" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <Button Grid.Column="1" Content="Add AP" Click="AddAP_Button_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>

</Window>