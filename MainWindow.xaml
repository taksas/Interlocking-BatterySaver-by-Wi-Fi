<Window
    x:Class="Interlocking_BatterySaver_by_Wi_Fi_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Interlocking_BatterySaver_by_Wi_Fi_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:prop ="clr-namespace:Interlocking_BatterySaver_by_Wi_Fi_.Properties"
    Title="Interlocking BatterySaver by Wi-Fi"
    Width="350"
    Height="400"
    ui:WindowHelper.UseModernWindowStyle="True" 
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStyle="ToolWindow"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">




    <Grid Margin="12,12,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="When not connected to Wi-Fi : " VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="16"/>
            <ComboBox Grid.Row="0"  Name="cmb1" IsEditable="False"  Width="90" ItemsSource="{Binding PercentageDic}" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedIndex="{Binding Path=NotConnected, Source={x:Static prop:Settings.Default}}" SelectionChanged="cmb1_SelectionChanged" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" />
            <TextBlock Grid.Row="1" Text="When connected to other Wi-Fi : " VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="16"/>
            <ComboBox Grid.Row="1" Name="cmb2" IsEditable="False"  Width="90" ItemsSource="{Binding PercentageDic}" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedIndex="{Binding Path=OtherConnected, Source={x:Static prop:Settings.Default}}" SelectionChanged="cmb2_SelectionChanged" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.Row="1" >
            <ListView Name="APList" SelectionMode="Single" VerticalAlignment="Top" SelectionChanged="APList_SelectionChanged"  >
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        Width="190"
                        Header="AP Name" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="wpf:Entry">
                                    <TextBlock Text="{Binding AP_Name}" VerticalAlignment="Center" Margin="0,6,0,0">
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn
                        Width="110"
                        Header="Battery (%)" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="wpf:Entry">
                                    <ComboBox Name="comboBox" Width="90" ItemsSource="{Binding Battery}" DisplayMemberPath="Value" SelectedIndex="{Binding SelectedIndex}"  SelectionChanged="comboBox_SelectionChanged">
                                    </ComboBox>
                                </DataTemplate>
                                
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Name="DeleteB" Content="Delete" Click="Delete_Button_Click"  Background ="Red" VerticalAlignment="Stretch" IsEnabled="False" />
            <Button Grid.Column="0" Name="UpdateB" Content="Update" Click="Update_Button_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Stretch" IsEnabled="False"  />
            <Button Grid.Column="1" Content="Help" Click="Help_Button_Click" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <Button Grid.Column="1" Content="Add AP" Click="AddAP_Button_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>

</Window>