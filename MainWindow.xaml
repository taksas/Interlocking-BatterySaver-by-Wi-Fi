<Window
    x:Class="Minimal_BatterySaver_Enabler__with_Wi_Fi_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minimal_BatterySaver_Enabler__with_Wi_Fi_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="700"
    Height="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid Margin="12,12,12,12" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ui:SimpleStackPanel Spacing="24">
                <TextBlock x:Name="Title" Style="{StaticResource HeaderTextBlockStyle}" Text="My first ModernWPF app" />
            </ui:SimpleStackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,84" Height="79" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <ListView Name="APList" SelectionMode="Single" Margin="0,-81,10,-77" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                        Width="270"
                        DisplayMemberBinding="{Binding AP_Name}"
                        Header="AP Name" />
                            <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Battery}"
                        Header="Battery (%)" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Button Content="Delete" Click="Delete_Button_Click"  Background ="Red" />
                <Button Content="Add IP" Click="AddAP_Button_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </Grid>
</Window>